{
  "compilerOptions": {
    "lib": [
      "es2017"
    ],
    "jsx": "react-jsx",
    "allowJs": true,
    "declaration": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "strict": false,
    "target": "ES2017",
    "outDir": "./lib",
    "types": [
      "react",
      "react-native"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "exclude": [
    "example/",
    "lib/",
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "./lib/**/*"
  ]
}